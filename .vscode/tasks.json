{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "taskName": "lint",
    "type": "process",
    "command": "./node_modules/.bin/eslint",
    "options": {
        "isShellCommand": "true",
        "args": ["*.js"],
        "showOutput": "silent",
        "problemMatcher": "$eslint-stylish"
    },
    "problemMatchers": [
        "$eslint-stylish"
    ]
}